<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/uygulama_bg"
    tools:context=".LoginActivity">


    //kaydırma ekranı
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/giris_resmi"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitXY"
                android:src="@drawable/uyg_logo" />

            <EditText
                android:id="@+id/giris_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_resmi"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/girdiler"
                android:drawableStart="@drawable/epostaicon"
                android:hint="Email adresinizi giriniz"
                android:inputType="textEmailAddress"
                android:padding="8dp"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/giris_sifre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_email"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/girdiler"
                android:drawableStart="@drawable/pw"
                android:hint="Şifrenizi giriniz"
                android:inputType="textPassword"
                android:padding="8dp"
                android:textSize="24sp" />

            <Button
                android:id="@+id/giris_butonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/giris_sifre"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/butonlar"
                android:padding="8dp"
                android:text="Giris"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <TextView
            android:id="@+id/sifre_unutma_baglantisi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/giris_butonu"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="24dp"
            android:layout_marginRight="15dp"
            android:padding="8dp"
            android:text="Şifremi unuttum"
                android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />
            <TextView
                android:id="@+id/yeni_hesap_alma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sifre_unutma_baglantisi"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="Yeni Hesap Oluşturma"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/kullanarak_giris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yeni_hesap_alma"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="24dp"
                android:layout_marginRight="15dp"
                android:padding="8dp"
                android:text="yada şu şekilde giriş"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/telefonla_giris_butonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kullanarak_giris"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/butonlar"
                android:padding="8dp"
                android:text="Telefonla Giriş"
                android:textAllCaps="false"
                android:textColor="@android:color/background_light"
                android:textSize="16sp"
                android:drawableStart="@drawable/phone"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>