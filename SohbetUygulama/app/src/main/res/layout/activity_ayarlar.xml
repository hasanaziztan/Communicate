<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AyarlarActivity">

    <include
        android:id="@+id/ayarlar_toolbar"
        layout="@layout/app_bar_layout">



    </include>

    <TextView
        android:id="@+id/edit"
        android:textSize="155dp"
        android:layout_below="@id/ayarlar_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"/>


    <EditText
        android:id="@+id/kullanici_adi_ayarla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="1dp"
        android:inputType="textMultiLine"
        android:layout_below="@id/edit"
        android:hint="Kullanici Adı"
        android:textAlignment="center"
        android:drawableStart="@drawable/ic_person_gri"
        android:textStyle="bold"
        android:background="@drawable/girdiler"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="4dp"/>

    <EditText
        android:id="@+id/profil_durumu_ayarla"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/kullanici_adi_ayarla"
        android:inputType="textMultiLine"
        android:hint="Hey artık benımde mesaj atma "
        android:textAlignment="center"
        android:drawableStart="@drawable/status"
        android:textStyle="bold"
        android:background="@drawable/girdiler"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="4dp"/>

    <Button
        android:id="@+id/ayarları_guncelleme_butonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:height="55dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/profil_durumu_ayarla"
        android:inputType="textMultiLine"
        android:textSize="24sp"
        android:text="Güncelle "
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:background="@drawable/butonlar"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="4dp"
        android:textAllCaps="false"/>

</RelativeLayout>